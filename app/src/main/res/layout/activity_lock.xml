<?xml version="1.0" encoding="utf-8"?>
<com.example.xiaobai.music.music.view.custom.SlidingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lock_root"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_alignParentTop="true"
        android:text="17:30"
        android:textSize="38sp"
        android:id="@+id/lock_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_alignLeft="@+id/lock_time"
        android:layout_below="@+id/lock_time"
        android:text="12月21日 星期三"
        android:includeFontPadding="false"
        android:textSize="20sp"
        android:id="@+id/lock_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_audio"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/lock_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_audio_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_audio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:text="专辑名称"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_audio"
        android:layout_below="@+id/tv_audio_name"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="演唱者"
        android:textSize="16sp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/prevIv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:src="@drawable/shang" />


            <ImageView
                android:id="@+id/playPauseIv"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="1"
                android:src="@drawable/play" />

            <ImageView
                android:id="@+id/nextIv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:src="@drawable/xia" />

        </LinearLayout>

        <com.example.xiaobai.music.music.view.custom.HintTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_40"
            android:includeFontPadding="false"
            android:text=">>> 滑动解锁"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</com.example.xiaobai.music.music.view.custom.SlidingFinishLayout>
