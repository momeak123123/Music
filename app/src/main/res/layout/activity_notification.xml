<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ima"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toStartOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/ima"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/ima"
        app:layout_constraintTop_toTopOf="@+id/ima"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="0dp"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white_50p"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/del"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:src="@drawable/del"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toStartOf="@+id/del"
        app:layout_constraintBottom_toBottomOf="@+id/ima"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt"
        app:layout_constraintTop_toBottomOf="@+id/txt">

        <ImageView
            android:id="@+id/pre"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/shang" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/play" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/xia" />

    </LinearLayout>
</RelativeLayout>